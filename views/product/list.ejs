<%- include ../components/header.ejs %>
<%- include ../components/navbar.ejs %>

<div class="container-fluid">
    <div class="row">
        <%- include ../components/list-group-item.ejs %>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>图标</th>
                        <th>名称</th>
                        <th>价格</th>
                        <th>邮费</th>
                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% list.forEach(function (item, index) { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><img src="<%= '/' + item.pic %>" width="200px"></td>
                        <td><%= item.title %></td>
                        <td><%= item.price %></td>
                        <td><%= item.fee %></td>
                        <td class="text-center">
                            <a href="/product/edit?id=<%=item._id%>" class="btn btn-success">修改</a>
                            <a href="/product/delete?id=<%=item._id%>" class="btn btn-danger">删除</a>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include ../components/footer.ejs %>